# Server Configuration
PORT=3001
NODE_ENV=development

# Security
ALLOWED_ORIGINS=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# Greenhouse Configuration
GREENHOUSE_API_KEY=your_greenhouse_api_key_here
GREENHOUSE_BOARD_IDS=board_id_1,board_id_2

# Lever Configuration
LEVER_API_KEY=your_lever_api_key_here
LEVER_COMPANY_IDS=company_id_1,company_id_2

# Additional Job Boards (Configure as needed)
# Workable
WORKABLE_API_KEY=your_workable_api_key_here

# BreezyHR
BREEZYHR_API_KEY=your_breezyhr_api_key_here

# SmartRecruiters
